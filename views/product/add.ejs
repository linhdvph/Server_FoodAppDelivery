<!-- header -->
<%-include('../inc/header')%>
<!-- /header -->

<div class="wrapper">
    <div class="container main">
        <div class="row m-5">
            <div class="card mb-3">
                <div class="row">
                    <h2 class="text-center p-2">Add product</h2>
                    <hr>
                </div>
                <div class="card-body ">
                    <form class="row g-3" action="" id="form-add" method="post" enctype="multipart/form-data">
                        <div class="text-center">
                            <input type="file" id="file" name="avatar" required>
                            <label for="file">
                                <img src="/images/iconcamera.png" id="chooseImg" class="rounded" alt="...">
                            </label>
            
                        </div>

                        <div class="col-md-12">
                            <label for="validationServer04" class="form-label">Type product</label>
                            <select class="form-select" name="type_product" id="validationServer04" required>
                                <option selected disabled value="">Choose...</option>
                                <% listTL.forEach(row => {%>
                                    <option value="<%=row._id%>"><%=row.name%></option>
                                <%})%>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="validationDefault01" class="form-label">Name product</label>
                            <input type="text" class="form-control" id="validationDefault01" name="name" required>
                        </div>
          
                        <div class="col-md-6">
                            <label for="validationDefault01" class="form-label">Price</label>
                            <input type="text" class="form-control" id="validationDefault04" name="price" required>
                        </div>   
                        
                        <div class="col-md-12">
                            <label for="validationDefault01" class="form-label">Address</label>
                            <input type="text" class="form-control" id="validationDefault04" name="address" required>
                        </div> 
                        
                        <div class="col-md-4">
                            <label for="validationDefault01" class="form-label">Time</label>
                            <input type="text" class="form-control" id="validationDefault04" name="time" required>
                        </div>   

                        <div class="col-md-4">
                            <label for="validationDefault01" class="form-label">Energy</label>
                            <input type="text" class="form-control" id="validationDefault04" name="energy" required>
                        </div>   

                        <div class="col-md-4">
                            <label for="validationDefault01" class="form-label">Rating</label>
                            <input type="text" class="form-control" id="validationDefault04" name="rating" required>
                        </div>   
                        
                        <div class="input-group">
                            <span class="input-group-text">Descriptions</span>
                            <textarea class="form-control" aria-label="With textarea" name="descriptions" required></textarea>
                        </div>
                        <div class="col-6">
                            <button class="btn btn-primary btn_add_pro" type="submit">Save</button>
                        </div>

                        <div class="col-6 d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/product" class="btn btn-secondary me-md-2 btn_back_pro">Back</a>
                          </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- footer -->
<%-include('../inc/footer')%>
<!-- /footer -->